#include "ap.h"

void APInit()
{
	MOTOR_Init();
}

void APMain()
{

//STOP();
//Motortest();
//ControlAP();

}

void ControlAP()
{
    uint8_t cmd = g_cmd;

    if (cmd == 0)
        return;     // 명령 없으면 그냥 리턴

    // 한 번 처리했으니 비워주기


    switch (cmd)
    {
    case 'F':   // Forward
        FOWARD();
        break;

    case 'B':   // Backward
        BACKWARD();
        break;

    case 'L':   // Left
        // 방향은 forward로 두고, 왼쪽만 off해서 회전
        FOWARD();
        LEFT();
        break;

    case 'R':   // Right
        FOWARD();
        RIGHT();
        break;

    case 'O':   // Stop
        STOP();
        break;

    case 'T':   // LV1, TRIANGLE
        STOP();
        break;

    case 'S':   // LV2, SQUARE
        STOP();
        break;

    case 'C':   // LV3, CIRCLE
        STOP();
        break;

    case 'X':   // STOP, CROSS(=O)
        STOP();
        break;


    default:
        // 알 수 없는 명령
        break;
    }
    g_cmd = 0;
}
