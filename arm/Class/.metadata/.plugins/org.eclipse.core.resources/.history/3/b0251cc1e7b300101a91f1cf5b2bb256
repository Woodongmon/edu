#ifndef INC_MOTOR_H_
#define INC_MOTOR_H_

#define IN1_PIN 		GPIO_PIN_1
#define IN1_GPIO_PORT	GPIOB

#define IN2_PIN 		GPIO_PIN_15
#define IN2_GPIO_PORT	GPIOB

#define IN3_PIN 		GPIO_PIN_14
#define IN3_GPIO_PORT	GPIOB

#define IN4_PIN 		GPIO_PIN_13
#define IN4_GPIO_PORT	GPIOB

typedef struct
{
    GPIO_TypeDef *port[4];  //GPIO PORT number
    uint16_t      pin[4];   // GPIO_PIN NUMBER
} Motor;

#endif /* INC_MOTOR_H_ */

void MOTOR_Init();

void MOTORA_CW();

void MOTORA_CCW();

void MOTORB_CW();

void MOTORB_CCW();

